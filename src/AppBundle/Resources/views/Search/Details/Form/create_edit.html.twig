{% trans_default_domain 'form' %}

{% if edit is defined and edit is same as(true) %}
    {% set button_trans_key = 'form.submit.update' %}
{% else %}
    {% set button_trans_key = 'form.submit.create' %}
{% endif %}

{{ form_errors(form) }}
{{ form_start(form, {
    'attr': {
        'id': 'form.vars.id'
    }
}) }}
<h2>{{ 'form.search.details.title'|trans }}</h2>
<div class="form-group col-lg-4">
    {{ form_errors(form.collaborators) }}
    {{ form_label(form.collaborators) }}
    {{ form_widget(form.collaborators) }}
</div>
<div class="form-group col-lg-12">
    {{ form_errors(form.description) }}
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
</div>

{{ form_widget(form._token) }}

<div class="form-group col-lg-2 navbar-right">
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">
        {{ button_trans_key|trans }}
    </button>
</div>
<div class="clearfix"></div>
{{ form_end(form) }}
