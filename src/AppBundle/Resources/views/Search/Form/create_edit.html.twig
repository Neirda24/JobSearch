{% trans_default_domain 'form' %}

{% if edit is defined and edit is same as(true) %}
    {% set button_trans_key = 'form.submit.update' %}
{% else %}
    {% set button_trans_key = 'form.submit.create' %}
{% endif %}

{{ form_errors(form) }}
{{ form_start(form, {
    'attr': {
        'id': form.vars.id
    }
}) }}
<div class="form-group col-lg-6">
    {{ form_errors(form.name) }}
    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
</div>
{% if not form.date_start.vars.valid or not form.date_end.vars.valid %}
<div class="form-inline form-group col-lg-12">
    <div class="form-group">
        {{ form_errors(form.date_start) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.date_end) }}
    </div>
</div>
{% endif %}
<div class="form-inline form-group col-lg-12">
    <div class="form-group">
        <div>
            <div class="input-group date" id="{{ form.date_start.vars.id }}">
                <span class="input-group-addon">{{ form_label(form.date_start) }}</span>
                {{ form_widget(form.date_start) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div>
            <div class="input-group date" id="{{ form.date_end.vars.id }}">
                <span class="input-group-addon">{{ form_label(form.date_end) }}</span>
                {{ form_widget(form.date_end) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>

{{ form_widget(form._token) }}

<div class="form-group col-lg-2">
    <button class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit">
        {{ button_trans_key|trans }}
    </button>
</div>
{{ form_end(form) }}
