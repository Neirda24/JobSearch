{% trans_default_domain 'form' %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{ search.name }}
        </h1>
    </div>
</div>
<div class="container-fluid">
    <div class="form-group col-lg-4">
        {{ form_widget(addCompanyForm.company, {
            'attr': {
                'class': 'col-lg-2',
                'placeholder': 'form.company.title'
            }
        }) }}
    </div>
    <div class="form-group col-lg-3">
        <a id="{{ addCompanyForm.vars.id ~ '_add' }}" href="#" class="btn btn-action btn-success">{{ 'form.submit.add'|trans }}</a>
        &nbsp;|&nbsp;
        <a href="{{ path('company_create', {'search': search.id}) }}" class="btn btn-action btn-info">{{ 'form.submit.new'|trans }}</a>
    </div>
</div>
