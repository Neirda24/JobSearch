{% extends 'AppBundle::base.html.twig' %}

{% block content %}
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>SIRET</th>
            <th>Created by</th>
        </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_edit', {'id': company.id}) }}">{{ company.id }}</a></td>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.submittedFrom.username }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock content %}
