{% trans_default_domain 'form' %}

{% if edit is defined and edit is same as(true) %}
    {% set button_trans_key = 'form.submit.update' %}
{% else %}
    {% set button_trans_key = 'form.submit.create' %}
{% endif %}

<div class="container">
{{ form_errors(form) }}
{{ form_start(form, {
    'attr': {
        'id': form.vars.id,
        'class': 'form-vertical'
    }
}) }}
<h2>{{ 'form.company.title'|trans }}</h2>
<div class="form-group col-lg-6 col-sm-12">
    {{ form_errors(form.firstname) }}
    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname) }}
</div>
<div class="form-group col-lg-6 col-sm-12">
    {{ form_errors(form.lastname) }}
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname) }}
</div>
<div class="form-group col-lg-4 col-sm-12">
    {{ form_errors(form.email) }}
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
</div>
<div class="form-group col-lg-4 col-sm-12">
    {{ form_errors(form.phone) }}
    {{ form_label(form.phone) }}
    {{ form_widget(form.phone) }}
</div>
<div class="form-group col-lg-4 col-sm-12">
    {{ form_errors(form.country) }}
    {{ form_label(form.country) }}
    {{ form_widget(form.country) }}
</div>

{{ form_widget(form._token) }}

<div class="form-group col-lg-2">
    <button class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit">
        {{ button_trans_key|trans }}
    </button>
</div>
{{ form_end(form) }}
</div>
