{% extends 'AppBundle::base.html.twig' %}
{# @var collaborator \AppBundle\Entity\Company\Collaborator #}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <a class="btn btn-lg btn-success btn-block" href="{{ path('collaborator_list') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    Retour a la liste
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <small>
                        <a href="{{ path('collaborator_edit', {'id': collaborator.id}) }}">
                            <span
                                    class="glyphicon glyphicon-edit"
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    title="{{ 'form.submit.edit'|trans({}, 'form') }}">
                            </span>
                        </a>
                    </small>
                    {{ collaborator.name|title }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 portfolio-item">
                <p>
                    <span class="glyphicon glyphicon-envelope"></span>&nbsp;
                    {% if collaborator.hasEmail %}
                        {{ collaborator.email }}
                    {% else %}
                        {{ 'collaborator.no_email'|trans({}, 'dashboard') }}
                    {% endif %}
                </p>
                <p>
                    <span class="glyphicon glyphicon-phone"></span>&nbsp;
                    {% if collaborator.hasPhone %}
                        {{ phone_number_format(collaborator.phone, 'NATIONAL') }}
                    {% else %}
                        {{ 'collaborator.phone'|trans({}, 'dashboard') }}
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
{% endblock content %}

{% block foot_javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock foot_javascripts %}
